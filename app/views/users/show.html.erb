        <div class="col-md-12">
            <div class="box">
                <div class="box-icon">
                    
                </div>
                <div class="info2">
                  
                      <div class="bs-callout bs-callout-danger">
                            <h4> 
                    <% if current_user.first_time == 0 %>
                    <%= '初診' %>
                    <% else %>
                    <%= '再診' %>
                    <% end %></h4>
                        <table class="table table-striped table-responsive ">
                              <thead>
                                <tr>
                                <th>予約番号</th>
                                <th>お名前</th>
                                <th>生年月日</th>
                                <th>予約日時</th>
                                <th>施術内容</th>
                                <th>部位</th>
                                </tr>
                              </thead>
                              <tbody class="tbody-align">
                                <tr>
                                  <td><%= @user.reservation_id %></td>
