<h1>共通項目</h1>

<table>
  <thead>
    <tr>
      <th>共通項目入力</th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.content %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>各施術項目入力</th>
    </tr>
  </thead>

  <tbody>
    <% @oquestions.each do |oquestion| %>
      <tr>
        <td><%= oquestion.content %></td>
        <td><%= link_to 'Show', oquestion %></td>
        <!-- <td><%#= link_to 'Edit', edit_question_path(question) %></td> -->
        <td><%= link_to 'Destroy', oquestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

