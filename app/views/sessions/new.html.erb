              <li><a href="about-us.html">About</a></li>
              <li><a href="contact-us.html">Contact</a></li>
            </ul> -->
            <!-- Clearfix -->
            <div class="clearfix"></div>
        </div>
      </footer>
      
      <!-- Footer Ends -->
    
    </div>
    
    <!-- Outer Ends -->   
    
    <!-- Scroll to top -->
    <span class="totop"><a href="#"><i class="fa fa-angle-up bg-color"></i></a></span>
    
