<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Question</th>
      
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.content %></td>
        <td><%= answer.user_id %></td>
        <td><%= answer.question_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

